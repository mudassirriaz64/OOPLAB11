<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.cell.*?>

<GridPane xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10" fx:controller="com.labtasks.task2.AddressBookController">
    <Label text="Name:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
    <TextField fx:id="nameField" promptText="Name" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

    <Label text="Phone Number:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
    <TextField fx:id="phoneNumberField" promptText="Phone Number" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

    <Label text="Email:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
    <TextField fx:id="emailField" promptText="Email" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

    <Button text="Add" onAction="#addContact" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
    <Button text="Edit" onAction="#editContact" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
    <Button text="Delete" onAction="#deleteContact" GridPane.columnIndex="2" GridPane.rowIndex="3"/>

    <TableView fx:id="tableView" GridPane.columnIndex="0" GridPane.rowIndex="4" GridPane.columnSpan="3">
        <columns>
            <TableColumn text="Name" prefWidth="150">
                <cellValueFactory>
                    <PropertyValueFactory property="name"/>
                </cellValueFactory>
            </TableColumn>
            <TableColumn text="Phone Number" prefWidth="150">
                <cellValueFactory>
                    <PropertyValueFactory property="phoneNumber"/>
                </cellValueFactory>
            </TableColumn>
            <TableColumn text="Email" prefWidth="200">
                <cellValueFactory>
                    <PropertyValueFactory property="email"/>
                </cellValueFactory>
            </TableColumn>
        </columns>
    </TableView>
</GridPane>